<Window x:Class="Grid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- First Row -->
        <Button Grid.Row="0" Grid.Column="0" Content="Row 0 - Column 0" Background="Orange" />
        <Button Grid.Row="0" Grid.Column="1" Content="Row 0 - Column 1" Background="OrangeRed" />

        <!-- Second Row -->
        <Button Grid.Row="1" Grid.Column="0" Content="Row 1 - Column 0" Background="Orchid" />
        <Button Grid.Row="1" Grid.Column="1" Content="Row 1 - Column 1" Background="PaleGoldenrod" />

        <!-- Third Row -->
        <Button Grid.Row="2" Grid.Column="0" Content="Row 2 - Column 0" Background="PaleGreen" />
        <Button Grid.Row="2" Grid.Column="1" Content="Row 2 - Column 1" Background="PaleTurquoise" />

    </Grid>
</Window>
